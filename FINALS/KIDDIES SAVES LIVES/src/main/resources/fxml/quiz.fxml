<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

<StackPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.kidsfirstaid.QuizController"
           prefHeight="800.0" prefWidth="1000.0" styleClass="quiz-pane">
    
    <VBox alignment="TOP_CENTER" spacing="30">
        <padding>
            <Insets top="30" left="50" right="50" bottom="50"/>
        </padding>
        
        <HBox alignment="CENTER_LEFT">
            <Button text="←" onAction="#handleBackButton" styleClass="back-button">
                <font>
                    <Font name="Arial Bold" size="24"/>
                </font>
            </Button>
        </HBox>
        
        <Label fx:id="questionLabel" text="Question" styleClass="quiz-question" wrapText="true" alignment="CENTER" prefWidth="800">
            <font>
                <Font name="Arial Bold" size="24"/>
            </font>
        </Label>
        
        <Region prefHeight="100"/>
        
        <HBox alignment="CENTER" spacing="200">
            <Button fx:id="checkButton" text="✓" onAction="#handleCheckButton" styleClass="check-button">
                <font>
                    <Font name="Arial Bold" size="60"/>
                </font>
            </Button>
            
            <Button fx:id="wrongButton" text="✗" onAction="#handleWrongButton" styleClass="wrong-button">
                <font>
                    <Font name="Arial Bold" size="60"/>
                </font>
            </Button>
        </HBox>
        
        <Label fx:id="feedbackLabel" text="" styleClass="feedback-label">
            <font>
                <Font name="Arial Bold" size="28"/>
            </font>
        </Label>
        
        <Button fx:id="nextButton" text="NEXT" onAction="#handleNextButton" styleClass="next-button" visible="false">
            <font>
                <Font name="Arial Bold" size="20"/>
            </font>
        </Button>
    </VBox>
</StackPane>
